<% content_for(:title) { t ".title" } %>

<% if is_mobile? %>
  <%= render "layouts/flash", :flash => flash %>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login", :data => { :ajax => false } }) do |f| %>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :username, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.text_field :username, :class =>"text_field" %>
    </div>
  </div>
  
  <div class="group wat-cf">
    <div class="left">
      <%= f.label :password, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.password_field :password, :class =>"text_field" %>
    </div>
  </div>
  
  <% if devise_mapping.rememberable? %>
    <div class="group wat-cf">
      <div class="right">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>
  
  <div class="group navform wat-cf">
    <div class="right">
      <%= submit_button_with_image(t(".submit"), "web-app-theme/key.png") %>
    </div>
  </div>
  
<% end %>

<% content_for(:title) { t ".title" } %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form" }) do |f| %>

  <%= f.hidden_field :reset_password_token %>
  
  <div class="group wat-cf">
    <div class="left">
      <%= f.label :password, t(".new_password"), :class => "label right" %>
    </div>
    <div class="right">
      <%= f.password_field :password, :class =>"text_field" %>
    </div>
  </div>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :password_confirmation, t(".confirm_new_password"), :class => "label right" %>
    </div>
    <div class="right">
      <%= f.password_field :password_confirmation, :class =>"text_field" %>
    </div>
  </div>

  <div class="group navform wat-cf">
    <div class="right">
      <%= submit_button_with_image(t(".submit"), "web-app-theme/tick.png") %>
    </div>
  </div>
  
<% end %>

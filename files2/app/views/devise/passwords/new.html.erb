<% content_for(:title) { t ".title" } %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f| %>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :email, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.email_field :email, :class =>"text_field" %>
    </div>
  </div>

  <div class="group navform wat-cf">
    <div class="right">
      <%= submit_button_with_image(t(".submit"), "web-app-theme/tick.png") %>
    </div>
  </div>
  
<% end %>

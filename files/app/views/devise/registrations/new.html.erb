<% content_for(:title) { t ".title" } %>

<% if is_mobile? %>
  <%= render "layouts/flash", :flash => flash %>
<% end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form" }) do |f| %>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :username, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.text_field  :username, :class =>"text_field" %>
    </div>
  </div>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :name, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.text_field  :name, :class =>"text_field" %>
    </div>
  </div>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :email, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.email_field :email, :class =>"text_field" %>
    </div>
  </div>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :password, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.password_field :password, :class =>"text_field" %>
    </div>
  </div>

  <div class="group wat-cf">
    <div class="left">
      <%= f.label :password_confirmation, :class => "label right" %>
    </div>
    <div class="right">
      <%= f.password_field :password_confirmation, :class =>"text_field" %>
    </div>
  </div>

  <% unless is_mobile? %>
    <div class="group wat-cf">
      <div class="left">
        <%= f.label :avatar, :class => "label right" %>
      </div>
      <div class="right">
        <%= f.file_field :avatar %>
      </div>
    </div>
  <% end %>

  <div class="group navform wat-cf">
    <div class="right">
      <%= submit_button_with_image(t(".submit"), "web-app-theme/tick.png") %>
    </div>
  </div>
  
<% end %>
